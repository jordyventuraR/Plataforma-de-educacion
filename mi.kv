
#TODO: LoginScreen
<LoginScreen>:
    FloatLayout:
        canvas.before: 
            Color:
                rgba: 97/255, 222/255, 97/255, 0.68  # Azul
            Rectangle:
                size: self.size
                pos: self.pos 
        
        Label:
            text: 'Clases de Mate'
            font_size: 36
            color: 198/255, 218/255, 198/255, 0.68  # Rojo
            pos: 500, 600
            text_size: self.size  # Centra el texto dentro del Label

        TextInput:
            id: username
            hint_text: "Username"
            font_size: 16
            size_hint: None, None
            width: 300
            height: 40
            pos: 500, 550

        TextInput:
            id: pasword
            hint_text: "Password"
            password: True
            password_mask: "*"
            multiline: False
            font_size: 16
            size_hint: None, None
            width: 300
            height: 40
            pos: 500, 500  
            
        Button:
            id: sigin
            text: 'iniciar sesion'
            background_color: 108/255, 96/255, 102/255, 0.8  # Verde
            font_size: 14
            size_hint: None, None
            width: 150
            height: 50
            pos: 575, 400
            on_press: root.sigin_press() 
            
        Button:
            id: login
            text: 'Crear cuenta'
            background_color: 108/255, 96/255, 102/255, 0.8  # Verde
            font_size: 14
            size_hint: None, None
            width: 150
            height: 50
            pos : 575, 350
            on_press: root.login_press()
            
